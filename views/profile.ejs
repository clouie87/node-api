<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> User Details</h3>


                <p>
                    <strong>id</strong>: <%= user.id %><br>

                    <strong>name</strong>: <%= user.name %><br>
                    <strong>email</strong>: <%= user.email %><br>
                    <strong>account type</strong>: <%= user.account %>
                </p>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Add Photos</h3>
                <a href="/upload" class="btn btn-warning"> + </a>
            </div>
        </div>

    </div>

    <div>
        <div class="well">
            <h3><span class="fa fa-user"></span> Display Photos</h3>
            <strong>photos</strong>: <br>
            <div class = "row">

                <% photos.forEach(function(photo) { %>
                <img style="width: 300px; height: 200px" src = '<%= photo.filepath %>'/>
                <% }); %>

            </div>

        </div>
    </div>


</div>
</body>
</html>
